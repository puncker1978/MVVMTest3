<Window x:Class="MVVMTest3.View.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMTest3.View"
        mc:Ignorable="d"
        Title="PersonWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Id"/>
            <TextBox/>
            <TextBlock Text="Фамилия"/>
            <TextBox/>
            <TextBlock Text="Имя"/>
            <TextBox/>
            <Button Content="Добавить" Command="{Binding SaveNewClientCommand}"
                    Margin="10 25"/>
        </StackPanel>
    </Grid>
</Window>
